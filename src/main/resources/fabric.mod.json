{
  "schemaVersion": 1,
  "id": "dftools",
  "version": "${version}",
  "name": "DFTools Lite",
  "description": "A port of DFTools for Fabric with fewer features.",
  "authors": [
    "K_Sasha",
    "Timeraa",
    "joaoh1"
  ],
  "contact": {
    "homepage": "https://www.mcdiamondfire.com/",
    "sources": "https://github.com/joaoh1/DFTools-Fabric"
  },

  "license": "Apache 2.0",
  "icon": "assets/dftools/icon.png",

  "environment": "*",
  "entrypoints": {
    "cotton-client-commands": ["com.mcdiamondfire.dftools.commands.DFToolsCommands"],
    "client": [
      "com.mcdiamondfire.dftools.DFTools"
    ]
  },
  "depends": {
    "cotton-client-commands": ">=0.4.2",
    "fabricloader": ">=0.6.0"
